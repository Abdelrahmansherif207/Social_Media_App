<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        />
        <link rel="stylesheet" href="posts.css" />
    </head>
    <body>
        <div class="header">
            <div class="user-info">
                <div class="avatar">
                    <%= user.username.charAt(0).toUpperCase() %>
                </div>
                <span>Welcome, <strong><%= user.username %></strong></span>
            </div>
            <div class="nav">
                <a href="http://localhost:3000/chat" title="Chat">
                    <i class="fas fa-comment-dots chat-icon"></i>
                </a>
                <form action="http://localhost:3000/logout" method="get">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            </div>
        </div>

        <div class="main-content">
            <div class="create-post-container">
                <h2>Create Post</h2>
                <form
                    action="http://localhost:3000/"
                    method="post"
                    class="post-form"
                >
                    <input
                        type="text"
                        name="title"
                        placeholder="Post title"
                        class="post-input"
                        required
                    />
                    <textarea
                        name="content"
                        placeholder="What's on your mind?"
                        class="post-input"
                        rows="3"
                        required
                    ></textarea>
                    <button type="submit" class="post-submit">Post</button>
                </form>
            </div>

            <div class="feed">
                <% if (posts.length > 0) { %> <% posts.forEach(post => { %>
                <div class="post-card">
                    <div class="post-header">
                        <div class="avatar">
                            <%= post.createdBy.charAt(0).toUpperCase() %>
                        </div>
                        <div>
                            <div class="post-author"><%= post.createdBy %></div>
                            <div class="post-time"><%= post.createdAt %></div>
                        </div>
                    </div>
                    <h3 class="post-title"><%= post.title %></h3>
                    <div class="post-content"><%= post.content %></div>
                    <div class="post-actions">
                        <div class="post-action">
                            <i class="far fa-heart"></i>
                            <span>Like</span>
                        </div>
                        <div class="post-action">
                            <i class="far fa-comment"></i>
                            <span>Comment</span>
                        </div>
                        <div class="post-action delete-icon">
                            <i class="fas fa-trash-alt"></i>
                            <span>Delete</span>
                        </div>
                    </div>
                </div>
                <% }) %> <% } else { %>
                <div class="no-posts">
                    <p style="font-size: 20px; font-weight: bold">
                        No posts yet
                    </p>
                    <p>Be the first to share something!</p>
                </div>
                <% } %>
            </div>
        </div>
    </body>
</html>
